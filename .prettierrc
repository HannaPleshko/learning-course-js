{
    "tabWidth": 2,
    "useTabs": false,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 140,
    "endOfLine": "lf",
    "overrides": [
      {
        "files": "*.json",
        "options": { "parser": "json" }
      },
      {
        "files": ".prettierrc",
        "options": { "parser": "json" }
      },
      {
        "files": ".lintstagedrc",
        "options": { "parser": "json" }
      },
      {
        "files": "*.ts",
        "options": { "parser": "typescript" }
      }
    ]
}